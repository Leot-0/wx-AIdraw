/* search.wxss */
.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20px;
}

.picker {
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  background-color: #f5f5f5;
  font-size: 16px;
  width: 80%; /* 宽度调整 */
  margin-bottom: 20px; /* 增加下拉框和输入框之间的间距 */
}

.city-input {
  width: 80%; /* 宽度调整 */
  padding: 10px;
  margin-bottom: 20px; /* 增加输入框和按钮之间的间距 */
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 16px;
}

button {
  width: 80%;
  padding: 10px;
  background-color: #1cbbb4;
  color: white;
  font-size: 16px;
  border: none;
  border-radius: 5px;
}

.weather-info {
  margin-top: 20px;
  width: 80%;
  text-align: left;
}

.weather-info text {
  display: block;
  font-size: 16px;
  margin-bottom: 10px;
}
